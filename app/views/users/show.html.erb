<%= link_to 'Home', '/' %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Avatar:</strong></br>
  <%= image_tag @user.avatar.url %>
</p>

<p>
  <strong>Location:</strong>
  <%= @user.location %>
</p>

<p>
  <strong>About:</strong>
  <%= @user.about %>
</p>

<p>
  <strong>Boards:</strong>
  <%= @user.boards.count %>
</p>

<p>
  <strong>Place Holder to display all boards below in grid. Click on board to link_to board:</strong>
</p>

<h1>Listing Boards</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Board Name</th>
      <th>Description</th>
      <th>Pin Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.boards.each do |board| %>
      <tr>
        <td><%= board.user.username %></td>
        <td><%= board.name %></td>
        <td><%= board.description %></td>
        <td><%= board.pins.count %></td>
        <td><%= link_to 'Show', [board.user, board] %></td>
        <td><%= link_to 'Edit', edit_user_board_path(board.user, board) %></td>
        <td><%= link_to 'Destroy', [board.user, board], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'New Board', new_user_board_path(@user) %> |
<%= link_to 'Edit Profile', edit_user_path(@user) %>
