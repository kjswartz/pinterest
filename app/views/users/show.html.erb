<%= link_to 'Home', '/' %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Avatar:</strong></br>
  <%= image_tag @user.avatar.url, class: "profileImage" %>
</p>

<p>
  <strong>Location:</strong>
  <%= @user.location %>
</p>

<p>
  <strong>About:</strong>
  <%= @user.about %>
</p>

<p>
  <strong>Boards:</strong>
  <%= @user.boards.count %>
</p>

<h1>Listing Boards</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Board Name</th>
      <th>Description</th>
      <th>Pin Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.boards.each do |board| %>
      <tr>
        <td><%= board.user.username %></td>
        <td><%= board.name %></td>
        <td><%= board.description %></td>
        <td><%= board.pins.count %></td>
        <td><%= link_to 'Show', [board.user, board] %></td>
        <td><%= link_to 'Edit', edit_user_board_path(board.user, board) %></td>
        <td><%= link_to 'Destroy', [board.user, board], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<div class="row">
  <div class="col-md-3">

    <!-- Button trigger modal -->
    <button type="button" class="btn" data-toggle="modal" data-target="#myModal">
      <%= image_tag('create_board.png') %>
    </button>
    <!-- Modal -->

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Create a Board</h4>
          </div>

          <div class="modal-body">
            <%= render "formboard" %>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          </div>

        </div>
      </div>
    </div>

  </div>

      <% @user.boards.each do |board| %>
        <div class="col-md-3">
          <div class="boardContainer">
            <h3 class="boardName"><%= board.name %></h3>
            <%= link_to image_tag(board.pins.first.image.url(:board), class:"boardimg"), [board.user, board] unless board.pins.blank? %>
            <%= link_to image_tag(board.pins[1].image.url(:thumb), class:"boardthumbimg"), [board.user, board] unless board.pins.blank? %>
            <%= link_to image_tag(board.pins[2].image.url(:thumb), class:"boardthumbimg"), [board.user, board] unless board.pins.blank? %>
            <%= link_to image_tag(board.pins[3].image.url(:thumb), class:"boardthumbimg"), [board.user, board] unless board.pins.blank? %>

            <div class="button"><%= link_to 'Edit', edit_user_board_path(board.user, board), class:"btn btn-default btn-block" %></div>

          </div>
        </div>
      <% end %>

</div>




