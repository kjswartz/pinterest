<%= link_to 'Home', '/' %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Avatar:</strong></br>
  <%= image_tag @user.avatar.url %>
</p>

<p>
  <strong>Location:</strong>
  <%= @user.location %>
</p>

<p>
  <strong>About:</strong>
  <%= @user.about %>
</p>

<p>
  <strong>Boards:</strong>
  <%= @user.boards.count %>
</p>

<h1>Listing Boards</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Board Name</th>
      <th>Description</th>
      <th>Pin Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.boards.each do |board| %>
      <tr>
        <td><%= board.user.username %></td>
        <td><%= board.name %></td>
        <td><%= board.description %></td>
        <td><%= board.pins.count %></td>
        <td><%= link_to 'Show', [board.user, board] %></td>
        <td><%= link_to 'Edit', edit_user_board_path(board.user, board) %></td>
        <td><%= link_to 'Destroy', [board.user, board], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<div class="row">
  <div class="col-md-12">
    <div class="masonry">
      <div class="item"><%= link_to image_tag('create_board.png'), new_user_board_path(@user) %></div>
      <% @user.boards.each do |board| %>
        <div class="item">
          <div class="boardContainer">
            <h3 class="boardName"><%= board.name %></h3>
            <div style="padding-left:10px;"><%= link_to image_tag(board.pins.first.image.url(:board)), [board.user, board] %></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



</br>
<%= link_to 'New Board', new_user_board_path(@user) %> |
