<%= form_for(Pin.new(:board => @board), :html => {:multipart => true}) do |f| %>


  <div class="field">
    <%= hidden_field_tag "board[board_ids][]", nil %>
    <% @current_user.boards.each do |board| %>
      <%= check_box_tag "board[board_ids][]", board.id, @current_user.board_ids.include?(board.id), id: dom_id(board) %>
      <%= label_tag dom_id(board), board.name %><br>
    <% end %>
  </div>


  <div class="field">
    <%= f.label :board_id %><br>
    <%= f.hidden_field :board_id %>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.hidden_field :title %>
    <%= @pin.title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.hidden_field :url %>
    <%= @pin.url %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
