<%= form_for(Pin.new(:board => @board), :html => {:multipart => true}) do |f| %>

  <div class="field">
    <%= f.label :board_id %><br>
    <%= f.hidden_field :board_id %>
    <%= @board.name.upcase %>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>
  <div class="field">
    <%= f.check_box :remove_image %>
    <%= f.label 'Remove Pin' %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
